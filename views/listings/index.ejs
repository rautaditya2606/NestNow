<% layout("/layouts/boilerplate") %>

<div class="listings-container">
    <!-- Listings Grid -->
    <div class="listings-grid">
        <div class="container">
            <!-- Add New Listing Button -->
            <div class="add-listing-section">
                <a href="/listings/new" class="btn btn-primary add-listing-btn">
                    <i class="fas fa-plus me-2"></i>
                    Add New Nest
                </a>
            </div>

            <div class="row g-4">
                <% for (listing of allListings) { %>
                    <div class="col-12 col-lg-6 col-xl-4">
                        <div class="listing-card">
                            <a href="/listings/<%= listing._id %>" class="listing-link">
                                <!-- Image Section -->
                                <div class="listing-image">
                                    <img src="<%= listing.image.url %>" 
                                         alt="<%= listing.title %>" 
                                         class="listing-img"
                                         loading="lazy">
                                    
                                    <!-- Location Badge -->
                                    <div class="location-badge">
                                        <i class="fas fa-map-marker-alt"></i>
                                        <span><%= listing.location %></span>
                                    </div>
                                    
                                    <!-- Rating Badge -->
                                    <% if (listing.review && listing.review.length > 0) { %>
                                        <% const avgRating = listing.review.reduce((sum, r) => sum + r.rating, 0) / listing.review.length %>
                                        <div class="rating-badge">
                                            <i class="fas fa-star"></i>
                                            <span><%= avgRating.toFixed(1) %></span>
                                        </div>
                                    <% } %>
                                    
                                    <!-- Hover Overlay -->
                                    <div class="hover-overlay">
                                        <div class="overlay-content">
                                            <i class="fas fa-eye"></i>
                                            <span>View Details</span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Content Section -->
                                <div class="listing-content">
                                    <div class="listing-header">
                                        <h3 class="listing-title"><%= listing.title %></h3>
                                        <div class="listing-meta">
                                            <span class="listing-location">
                                                <i class="fas fa-map-marker-alt me-1"></i>
                                                <%= listing.location %>, <%= listing.country %>
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <p class="listing-description">
                                        <%= listing.description.length > 120 ? listing.description.substring(0, 120) + '...' : listing.description %>
                                    </p>
                                    
                                    <div class="listing-footer">
                                        <div class="price-section">
                                            <span class="price-label">Starting from</span>
                                            <div class="price-amount">
                                                <span class="original-price">₹<%= listing.price.toLocaleString("en-IN") %></span>
                                                <span class="tax-price" style="display: none">
                                                    ₹<%= (listing.price * 1.18).toLocaleString("en-IN") %>
                                                </span>
                                                <span class="price-unit">/ night</span>
                                            </div>
                                        </div>
                                        
                                        <div class="reviews-section">
                                            <div class="reviews-info">
                                                <span class="reviews-count">
                                                    <%= listing.review ? listing.review.length : 0 %> reviews
                                                </span>
                                                <% if (listing.review && listing.review.length > 0) { %>
                                                    <% const avgRating = listing.review.reduce((sum, r) => sum + r.rating, 0) / listing.review.length %>
                                                    <div class="rating-stars">
                                                        <% for(let i = 1; i <= 5; i++) { %>
                                                            <i class="fas fa-star <%= i <= avgRating ? 'star-filled' : 'star-empty' %>"></i>
                                                        <% } %>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script src="/js/darkMode.js"></script>
<script>
    document.getElementById('taxToggle').addEventListener('change', function () {
        const originalPrices = document.querySelectorAll('.original-price');
        const taxPrices = document.querySelectorAll('.tax-price');

        originalPrices.forEach(price => {
            price.style.display = this.checked ? 'none' : 'inline';
        });

        taxPrices.forEach(price => {
            price.style.display = this.checked ? 'inline' : 'none';
        });
    });
</script>

<style>
    /* Modern CSS Variables - Single Color Theme */
    :root {
        --primary-color: #D4AF37;
        --primary-light: #E6C866;
        --primary-dark: #B8941F;
        --primary-ultra-light: #F8F4E6;
        --text-dark: #2C3E50;
        --text-medium: #5D6D7E;
        --text-light: #85929E;
        --bg-white: #FFFFFF;
        --bg-light: #FAFBFC;
        --border-color: #E8E8E8;
        --shadow-light: 0 2px 12px rgba(212, 175, 55, 0.08);
        --shadow-medium: 0 8px 32px rgba(212, 175, 55, 0.12);
        --shadow-heavy: 0 16px 48px rgba(212, 175, 55, 0.16);
        --border-radius: 16px;
        --border-radius-small: 8px;
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    /* Container Styles */
    .listings-container {
        min-height: 100vh;
        background: var(--bg-white);
        padding: 2rem 0 4rem 0;
    }

    /* Add Listing Section */
    .add-listing-section {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 2rem;
        padding: 0 1rem;
    }

    /* Add Listing Button */
    .add-listing-btn {
        background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
        border: none;
        padding: 1rem 2rem;
        border-radius: var(--border-radius);
        color: var(--bg-white);
        font-weight: 600;
        font-size: 1.1rem;
        text-decoration: none;
        transition: var(--transition);
        box-shadow: var(--shadow-light);
        min-width: 200px;
        text-align: center;
    }

    .add-listing-btn:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-medium);
        color: var(--bg-white);
        background: linear-gradient(135deg, var(--primary-dark), var(--primary-color));
    }

    /* Listings Grid */
    .listings-grid {
        padding: 0 0 2rem 0;
    }

    /* Card Styles */
    .listing-card {
        background: var(--bg-white);
        border-radius: var(--border-radius);
        overflow: hidden;
        box-shadow: var(--shadow-light);
        transition: var(--transition);
        height: 100%;
        position: relative;
        border: 1px solid var(--border-color);
    }

    .listing-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-heavy);
        border-color: var(--primary-light);
    }

    .listing-link {
        text-decoration: none;
        color: inherit;
        display: block;
        height: 100%;
    }

    /* Image Section */
    .listing-image {
        position: relative;
        height: 280px;
        overflow: hidden;
    }

    .listing-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: var(--transition);
    }

    .listing-card:hover .listing-img {
        transform: scale(1.08);
    }

    /* Hover Overlay */
    .hover-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: var(--transition);
    }

    .listing-card:hover .hover-overlay {
        opacity: 1;
    }

    .overlay-content {
        color: var(--bg-white);
        text-align: center;
        font-weight: 600;
        font-size: 1.1rem;
    }

    .overlay-content i {
        display: block;
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    /* Badges */
    .location-badge {
        position: absolute;
        bottom: 15px;
        left: 15px;
        background: rgba(0, 0, 0, 0.8);
        color: var(--bg-white);
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-size: 0.9rem;
        font-weight: 500;
        backdrop-filter: blur(10px);
    }

    .rating-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        background: var(--primary-color);
        color: var(--bg-white);
        padding: 0.5rem 0.75rem;
        border-radius: 25px;
        font-size: 0.9rem;
        font-weight: 600;
        box-shadow: 0 2px 8px rgba(212, 175, 55, 0.3);
    }

    /* Content Section */
    .listing-content {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        height: calc(100% - 280px);
    }

    .listing-header {
        margin-bottom: 1rem;
    }

    .listing-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
        line-height: 1.3;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .listing-meta {
        margin-bottom: 0.5rem;
    }

    .listing-location {
        color: var(--text-medium);
        font-size: 1rem;
        display: flex;
        align-items: center;
        font-weight: 500;
    }

    .listing-description {
        color: var(--text-light);
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 1.5rem;
        flex-grow: 1;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Footer Section */
    .listing-footer {
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        margin-top: auto;
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-color);
    }

    .price-section {
        display: flex;
        flex-direction: column;
    }

    .price-label {
        font-size: 0.8rem;
        color: var(--text-light);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-weight: 600;
        margin-bottom: 0.25rem;
    }

    .price-amount {
        display: flex;
        align-items: baseline;
        gap: 0.25rem;
    }

    .original-price,
    .tax-price {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--primary-color);
    }

    .price-unit {
        font-size: 0.9rem;
        color: var(--text-light);
        font-weight: 500;
    }

    .reviews-section {
        text-align: right;
    }

    .reviews-info {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 0.5rem;
    }

    .reviews-count {
        font-size: 0.9rem;
        color: var(--text-light);
        font-weight: 500;
    }

    .rating-stars {
        display: flex;
        gap: 0.1rem;
    }

    .star-filled {
        color: var(--primary-color);
    }

    .star-empty {
        color: var(--border-color);
    }

    /* Responsive Design */
    @media (max-width: 1200px) {
        .listing-image {
            height: 260px;
        }
        
        .listing-content {
            padding: 1.75rem;
        }
    }

    @media (max-width: 992px) {
        .listing-image {
            height: 240px;
        }
        
        .listing-content {
            padding: 1.5rem;
        }
    }

    @media (max-width: 768px) {
        .listings-container {
            padding: 1.5rem 0 2rem 0;
        }

        .add-listing-section {
            margin-bottom: 1.5rem;
        }

        .listing-image {
            height: 200px;
        }

        .listing-content {
            padding: 1.25rem;
        }

        .listing-title {
            font-size: 1.25rem;
        }

        .price-amount {
            font-size: 1.25rem;
        }
    }

    @media (max-width: 576px) {
        .listings-container {
            padding: 1rem 0 2rem 0;
        }

        .add-listing-section {
            margin-bottom: 1rem;
        }

        .add-listing-btn {
            width: 100%;
            text-align: center;
        }

        .listing-image {
            height: 180px;
        }

        .listing-content {
            padding: 1rem;
        }

        .listing-title {
            font-size: 1.1rem;
        }

        .listing-description {
            font-size: 0.9rem;
            -webkit-line-clamp: 2;
        }

        .price-amount {
            font-size: 1.1rem;
        }

        .location-badge,
        .rating-badge {
            font-size: 0.8rem;
            padding: 0.4rem 0.8rem;
        }
    }

    /* Loading Animation */
    .listing-card {
        animation: fadeInUp 0.8s ease-out;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Stagger animation for cards */
    .listing-card:nth-child(1) { animation-delay: 0.1s; }
    .listing-card:nth-child(2) { animation-delay: 0.2s; }
    .listing-card:nth-child(3) { animation-delay: 0.3s; }
    .listing-card:nth-child(4) { animation-delay: 0.4s; }
    .listing-card:nth-child(5) { animation-delay: 0.5s; }
    .listing-card:nth-child(6) { animation-delay: 0.6s; }
</style>