        --search-shadow-focus: 0 4px 20px rgba(212, 175, 55, 0.15);
    }

    .navbar {
        padding: 0.8rem 2rem;
        background: white;
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.05);
