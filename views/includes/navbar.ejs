    .navbar-brand {
        font-size: 1.8rem;
    }

    .navbar-brand img {
        height: 45px;
        width: auto;
        transition: all 0.3s ease;
    }

    .navbar-brand span {
        background: var(--luxury-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
