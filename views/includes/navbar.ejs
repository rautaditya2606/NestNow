            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .search-container {
            margin: 0.5rem 0;
        }

        .search-input-group {
            border-radius: 20px;
            padding: 0.3rem 0.6rem;
        }

        .search-input {
