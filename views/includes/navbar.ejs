    }

    @keyframes pulse {
        0% {
            box-shadow: var(--search-shadow-focus);
        }
        50% {
            box-shadow: 0 4px 20px rgba(212, 175, 55, 0.25);
        }
        100% {
            box-shadow: var(--search-shadow-focus);
        }
    }
</style>

<script>
    // Enhanced search functionality
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.querySelector('.search-input');
        const searchClear = document.querySelector('.search-clear');
        const searchSuggestions = document.querySelector('.search-suggestions');
        const searchInputGroup = document.querySelector('.search-input-group');

        // Show/hide clear button
        searchInput.addEventListener('input', function() {
            if (this.value.length > 0) {
                searchClear.style.display = 'flex';
            } else {
                searchClear.style.display = 'none';
            }
        });

        // Clear search input
        searchClear.addEventListener('click', function() {
            searchInput.value = '';
            searchInput.focus();
            searchClear.style.display = 'none';
        });

        // Show suggestions on focus (optional)
        searchInput.addEventListener('focus', function() {
            // Uncomment the next line to show suggestions on focus
            // searchSuggestions.style.display = 'block';
        });

        // Hide suggestions when clicking outside
        document.addEventListener('click', function(e) {
            if (!searchInputGroup.contains(e.target)) {
                searchSuggestions.style.display = 'none';
            }
        });

        // Handle suggestion clicks
        document.querySelectorAll('.suggestion-item').forEach(item => {
            item.addEventListener('click', function() {
                const text = this.querySelector('span').textContent;
                searchInput.value = text;
                searchInput.focus();
                searchSuggestions.style.display = 'none';
                searchClear.style.display = 'flex';
            });
        });

        // Add loading state on form submit
        document.querySelector('.search-form').addEventListener('submit', function() {
            searchInputGroup.classList.add('searching');
            setTimeout(() => {
                searchInputGroup.classList.remove('searching');
            }, 1500);
        });
    });
</script>